{% extends 'template.twig' %}
{% block form %}
    <div class="form-group">
        <label for="plain">Votre texte</label>
        {% if plain is defined %}
            <input type="text" class="form-control" id="plain" name="plain" value="{{ plain }}">
        {% else %}
            <input type="text" class="form-control" id="plain" name="plain">
        {% endif %}
    </div>

    <div class="form-group">
        <label for="secret_key">Votre clé</label>
        {% if plain is defined %}
            <input type="text" class="form-control" id="key" name="key" value="{{ key }}">
        {% else %}
            <input type="text" class="form-control" id="key" name="key">
        {% endif %}
    </div>

    <div class="form-group">
        <label for="type">Type</label>
        <select class="form-control" name="type" id="type">
            <option value="1">Encrypter</option>
            <option value="2">Décrypter</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Envoyer</button>

    <div class="form-group">
        {% if result is defined %}
            <label for="textval">Résultat :</label>
            <textarea class="form-control" id="my-textarea">{{ result }}</textarea>
        {% endif %}
    </div>

    {% if result is defined %}
    <div class="form-group">
        <button type="button" onclick="download('blowfish')" class="btn btn-primary">Sauvegarder</button>
    </div>
    {% endif %}
{% endblock %}